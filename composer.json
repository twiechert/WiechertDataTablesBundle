{
    "name": "wiechert/datatables-bundle",
    "type": "symfony-bundle",
    "description": "Extension for easily generating datatables from Doctrine entities.",
    "license": "MIT",
    "authors": [
        {
            "name": "Tayfun Wiechert",
            "email": "tayfun.wiechert@gmail.com"
        }
    ],


    "require": {
        "symfony/framework-bundle": "~2.1",
        "doctrine/orm": ">=2.2.3,<2.4-dev",
        "doctrine/doctrine-bundle": "1.2.*",
        "friendsofsymfony/jsrouting-bundle": "~1.1",
        "jms/serializer-bundle": "0.11"
    },

    "require-dev": {
        "mockery/mockery": "dev-master@dev"
    },

    "scripts": {
        "post-install-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets"
        ],
        "post-update-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets"
        ]
    },
   
    "minimum-stability": "dev",
    "autoload": {
        "psr-0": { "Wiechert\\DataTablesBundle": "" }
    },
    "target-dir": "Wiechert/DataTablesBundle"


}
